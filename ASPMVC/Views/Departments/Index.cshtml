@model IEnumerable<ASPMVC.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Департаменты</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Создать новый департамент</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentDepartment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentDepartment.Id)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><span class="badge rounded-pill bg-primary">Изменить</span></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><span class="badge rounded-pill bg-info">Подробнее</span></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><span class="badge rounded-pill bg-danger">Удалить</span></a>
            </td>
        </tr>
}
    </tbody>
</table>
